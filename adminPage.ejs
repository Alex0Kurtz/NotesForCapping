<!DOCTYPE html> AWEAWE
<!--Good Enough for 11/5 demo-->
<html lang="en">
<head>
  <title>S.U.C.C.M.E Admin Home Page</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
  <link rel="stylesheet" href="admin.css">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
  <script src = "AdminHomepage.js"></script>
</head>
<!--<body onload="populate()">-->
<br>
<h1 align = "left">Welcome, <%= userInfo.userFirstName%>!</h1>
<a href="/logout"><button>Logout</button></a>
  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" data-toggle="tab" href="#home">Home</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href="#NewUser">New User</a>
    </li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div id="home" class="container tab-pane active"><br>
      <div id="divSearchBar" style="font-size: 20px; padding-bottom: 10px; color: White;">
      <label>
         <input type="text" id="searchBar" name="searchBar">
         <button onclick ="search()" type = "button">Search</button>
      </label>
     </div>
     <table id ="UsersTable"; class = "col-md-8 table table-hover"; style= "width: 1000px; background-color: #404040; color: white;";>
             <tr>
               <th onclick="sort(0)">First Name</th>
               <th onclick="sort(1)">Last Name</th>
             </tr>
             <%users.forEach(user => { %>
                <tr>
                    <td><%= user.userFirstName%></td>
                    <td><%= user.userLastName%></td>
                </tr>
            <% }); %>
           </table>
</div>
    <div id="NewUser" class="container tab-pane fade"><br>
      <form class="formNewUser" method="POST" id="registrationForm"> <!-- CREATE NEW USER -->
                      <div class="form-group">
                          <h3>Create New User</h3>
                          <div class="updatemessage" id="updatePasswordMessage"></div>
                          <div class="col-xs-6">
                              <label for="firstName"><h4>First name</h4></label>
                              <input type="text" class="form-control" name="userFirstName" id="userFirstName" placeholder="Billy" title="enter the user's first name if any.">
                          </div>
                      </div>
                      <div class="form-group">
                          <div class="col-xs-6">
                              <label for="lastName"><h4>Last name</h4></label>
                              <input type="text" class="form-control" name="userLastName" id="userLastName" placeholder="Bob" title="enter the user's Last Name.">
                          </div>
                      </div>

                      <div class="form-group">
                          <div class="col-xs-6">
                              <label for="email"><h4>Email</h4></label>
                              <input type="email" class="form-control" name="userEmail" id="userEmail" placeholder="you@email.com" title="enter the user's email.">
                          </div>
                      </div>

                      <div class="form-group">
                          <div class="col-xs-6">
                              <label for="password"><h4>Enter Password</h4></label>
                              <input type="password" class="form-control" name="userPassword" id="userPassword" placeholder="***************" title="enter the user's password.">
                          </div>
                      </div>
                      <div class="form-group">
                          <div class="col-xs-6">
                              <label for="passwordVerify"><h4>Verify Password</h4></label>
                              <input type="password" class="form-control" name="passwordVerify" id="passwordVerify" placeholder="***************" title="Verify the user's passowrd.">
                          </div>
                      </div>
                      <div class="form-group">
                          <div class="col-xs-6">
                              <label for="creditReq"><h4>Minimum Credit Requirement</h4></label>
                              <input type="number" class="form-control" name="userCreditReq" id="userCreditReq" placeholder="Enter a Positive Whole Number" title="enter the user's credit requirement.">
                          </div>
                      </div>
                      <div class="form-group">
                          <div class="col-xs-6">
                              <label for="startYear"><h4>Start Year</h4></label>
                              <input type="number" class="form-control" name="userStartYear" id="userStartYear" placeholder="Enter the user's start year" title="enter the year the user entered the school's employment">
                          </div>
                      </div>
                      <div class="form-group">
                        <div class="col-xs-6">
                            <h4>User Rank</h4>
                            <label for="Ranks"></label>
                            <select id="userRanks" name="userRanks">
                               
                            </select>
                        </div>
                </div>
			         <div class="col-xs-6">
                 <br>
                 <button id = "createUser" class="btn btn-lg btn-success" type="submit" > Update </button>
              </div>
            </form>
    </div>
  </div>
</div>
<script src = "admin.js"></script>
</body>
</html>
